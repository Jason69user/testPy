class BankAccount:
    def __init__(self, balance):
        self.__balance = balance

    def deposit(self, amount):
        try:
            amount = int(amount)
            if amount > 0:
                self.__balance += amount
                print(f'Депозит на сумму {amount} евродолларов пополнен')
            else:
                print('Сумма депозита должна быть положительной')
        except ValueError:
            print('Введите корректную сумму (число)')

    def withdraw(self, amount):
        try:
            amount = int(amount)
            if amount > 0:
                if self.__balance >= amount:
                    self.__balance -= amount
                    print(f'С баланса снято {amount} евродолларов')
                else:
                    print('Недостаточно средств на балансе для снятия')
            else:
                print('Сумма снятия должна быть положительной')
        except ValueError:
            print('Введите корректную сумму (число)')

    def get_balance(self):
        print(f'На балансе {self.__balance} евродолларов')


def account_menu():
    account = BankAccount(0)
    while True:
        enter = input('\nВыбирите действие из списка ниже:'
                      '\n1 - Просмотреть баланс на счете'
                      '\n2 - Внести депозит'
                      '\n3 - Снять наличные'
                      '\n4 - Выйти'
                      '\nНажмите на цифру пункта меню: ')

        if enter == '1':
            account.get_balance()
        elif enter == '2':
            amount = input('Введите сумму которую хотите внести на счет: ')
            account.deposit(amount)
        elif enter == '3':
            amount = input('Введите сумму которую хотите снять со счета: ')
            account.withdraw(amount)
        elif enter == '4':
            print('Выход из программы.')
            break
        else:
            print('Неверный ввод, попробуйте снова')

account_menu()
