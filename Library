class ToDoList:
    def __init__(self):
        self.tasks = []
        self.id = 1

    def add_task(self,task):
        self.tasks.append({'id': self.id, 'task': task, 'completed': False})
        print(f'Задача №{self.id} "{task}" добавлена.')
        self.id += 1

    def complete_task(self, task_id):
        for i in self.tasks:
            if i['id'] == task_id:
                i['completed'] = True
                print(f"Задача №{task_id} '{i["task"]}' выполнена.")
                return
        print(f'Задача не найдена')

    def remove_task(self, task_id):
        for i in self.tasks:
            if i['id'] == task_id:
                self.tasks.remove(i)
                print(f"Задача '{task_id}' {i["task"]} удалена")
                return
        print('Задача не найдена')

    def list_task(self):
        if not self.tasks:
            print('Список задач пуст')
        else:
            for i in self.tasks:
                status = '✔️' if i['completed'] is True else '❌'
                print(f'{i["id"]} {i["task"]} [{status}]')


def todo_menu():
    todo_list = ToDoList()
    while True:
        enter = input('\nВыбирите действие из списка ниже:'
                      '\n1 - Просмотреть список задач'
                      '\n2 - Добавить задачу'
                      '\n3 - Пометить задачу выполенной'
                      '\n4 - Удалить задачу'
                      '\n5 - Выйти'
                      '\n Нажмите на цифру пункта меню: ')

        if enter == '1':
            todo_list.list_task()
        elif enter == '2':
            task = input('Введите название задачи: ')
            todo_list.add_task(task)
        elif enter == '3':
            task_id = int(input('Введите номер задачи: '))
            todo_list.complete_task(task_id)
        elif enter == '4':
            task_id = int(input('Введите номер задачи: '))
            todo_list.remove_task(task_id)
        elif enter == '5':
            print('Выход из программы.')
            break
        else:
            print('Неверный ввод, попробуйте снова')


todo_menu()
